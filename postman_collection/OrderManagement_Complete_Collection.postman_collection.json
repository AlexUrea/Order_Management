	"item": [
		{
			"name": "Auth - Generate Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    var token = pm.response.text();",
							"    pm.environment.set(\"token\", token);",
							"    console.log(\"Token set: \" + token);",
							"} else {",
							"    console.error(\"Failed to generate token\");",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": ""
				},
				"url": {
					"raw": "{{baseUrl}}/auth/generate",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"auth",
						"generate"
					]
				}
			},
			"response": []
		},
